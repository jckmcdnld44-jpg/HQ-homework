<body class="flex items-center justify-center min-h-screen p-4">

    <!-- Main Container -->
    <main id="main-container" class="w-full max-w-6xl mx-auto rounded-3xl overflow-hidden shadow-2xl relative page-transition transform translate-x-0 opacity-100">
        <!-- Landing Page Section -->
        <div id="landing-page" class="md:flex md:h-[600px] bg-white">
            <!-- Left Side: Text Content and Call to Action -->
            <div class="flex-1 bg-brand-lightblue p-8 md:p-16 flex flex-col justify-center text-center md:text-left">
                <!-- Brand Icon -->
                <div class="mx-auto md:mx-0 w-12 h-12 bg-brand-yellow rounded-lg mb-6 flex items-center justify-center">
                    <!-- A simple SVG for the icon, matching the design -->
                    <svg class="w-8 h-8 text-brand-lightest" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </div>

                <!-- Headline -->
                <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-brand-black leading-tight mb-4">
                    Turn your voice into clean water
                </h1>

                <!-- Sub-headline / Description -->
                <p class="text-brand-charcoal text-base md:text-lg mb-8 max-w-lg mx-auto md:mx-0">
                    Join a global student movement for water justice. Where 100% of your donation funds real projects that create measurable change.
                </p>

                <!-- Call to Action Button -->
                <div class="flex justify-center md:justify-start">
                    <button id="cta-button" onclick="showFormPage()" class="px-8 py-4 bg-brand-yellow hover:bg-yellow-500 text-brand-charcoal font-bold rounded-full shadow-lg transition duration-300 transform hover:scale-105">
                        Take Action Today
                    </button>
                </div>
            </div>

            <!-- Right Side: Image -->
            <div class="flex-1 min-h-[300px] md:min-h-full bg-cover bg-center rounded-r-3xl" style="background-image: url('https://placehold.co/1200x800/444444/F6F6F6?text=Placeholder+Image');">
            </div>
        </div>
