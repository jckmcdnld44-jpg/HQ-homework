    <!-- Form Page Section - Initially Hidden -->
    <section id="form-page" class="w-full max-w-6xl mx-auto rounded-3xl overflow-hidden shadow-2xl absolute inset-0 bg-brand-offwhite page-transition transform translate-x-full opacity-0">
        <div class="flex flex-col h-full p-8 md:p-16 justify-center text-center">
            <h2 class="text-3xl sm:text-4xl font-bold text-brand-black mb-4">
                Join the Movement
            </h2>
            <p class="text-brand-charcoal text-base md:text-lg mb-8">
                Fill out the form below to receive updates on how you can help.
            </p>
            
            <form id="submission-form" class="max-w-md mx-auto w-full">
                <div class="mb-6">
                    <label for="name" class="block text-left text-sm font-medium text-brand-charcoal mb-1">Full Name</label>
                    <input type="text" id="name" name="name" required
                           class="w-full px-4 py-3 border border-brand-pink rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-yellow transition-colors">
                </div>
                <div class="mb-6">
                    <label for="email" class="block text-left text-sm font-medium text-brand-charcoal mb-1">Email Address</label>
                    <input type="email" id="email" name="email" required
                           class="w-full px-4 py-3 border border-brand-pink rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-yellow transition-colors">
                </div>
                <div class="mb-6">
                    <label for="message" class="block text-left text-sm font-medium text-brand-charcoal mb-1">Message</label>
                    <textarea id="message" name="message" rows="4"
                              class="w-full px-4 py-3 border border-brand-pink rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-yellow transition-colors"></textarea>
                </div>
                <button type="submit" class="w-full px-8 py-4 bg-brand-yellow hover:bg-yellow-500 text-brand-charcoal font-bold rounded-full shadow-lg transition duration-300 transform hover:scale-105">
                    Submit
                </button>
            </form>

            <button onclick="showLandingPage()" class="mt-8 text-brand-charcoal hover:text-brand-black transition-colors">
                &larr; Back to Home
            </button>
        </div>
    </section>

    <!-- Confirmation Modal -->
    <div id="confirmation-modal" class="fixed inset-0 bg-brand-black bg-opacity-75 z-50 flex items-center justify-center hidden modal-transition opacity-0">
        <div class="bg-brand-lightest p-8 md:p-12 rounded-2xl shadow-2xl text-center max-w-md mx-auto transform scale-95">
            <h3 class="text-2xl sm:text-3xl font-bold text-brand-black mb-4">Thank You!</h3>
            <p class="text-brand-charcoal mb-8">
                Your voice is now part of the movement. We will be in touch with updates on your impact.
            </p>
            <button onclick="closeModal()" class="px-8 py-4 bg-brand-yellow hover:bg-yellow-500 text-brand-charcoal font-bold rounded-full shadow-lg transition duration-300 transform hover:scale-105">
                Close
            </button>
        </div>
    </div>

    <!-- JavaScript for page and modal logic -->
    <script>
        const mainContainer = document.getElementById('main-container');
        const landingPage = document.getElementById('landing-page');
        const formPage = document.getElementById('form-page');
        const confirmationModal = document.getElementById('confirmation-modal');
        const form = document.getElementById('submission-form');

        // Function to show the form page and hide the landing page
        function showFormPage() {
            mainContainer.classList.add('transform', '-translate-x-full', 'opacity-0');
            mainContainer.classList.remove('translate-x-0', 'opacity-100');
            
            setTimeout(() => {
                formPage.classList.remove('transform', 'translate-x-full', 'opacity-0');
                formPage.classList.add('transform', 'translate-x-0', 'opacity-100');
            }, 500); // Wait for the main page to transition out
        }

        // Function to show the landing page and hide the form page
        function showLandingPage() {
            formPage.classList.add('transform', 'translate-x-full', 'opacity-0');
            formPage.classList.remove('translate-x-0', 'opacity-100');

            setTimeout(() => {
                mainContainer.classList.remove('transform', '-translate-x-full', 'opacity-0');
                mainContainer.classList.add('transform', 'translate-x-0', 'opacity-100');
            }, 500); // Wait for the form page to transition out
        }

        // Function to show the confirmation modal
        function showConfirmationModal() {
            confirmationModal.classList.remove('hidden', 'opacity-0');
            setTimeout(() => {
                confirmationModal.classList.add('opacity-100');
                confirmationModal.querySelector('div').classList.remove('scale-95');
                confirmationModal.querySelector('div').classList.add('scale-100');
            }, 10);
        }

        // Function to close the confirmation modal
        function closeModal() {
            confirmationModal.classList.remove('opacity-100');
            confirmationModal.querySelector('div').classList.remove('scale-100');
            confirmationModal.querySelector('div').classList.add('scale-95');
            setTimeout(() => {
                confirmationModal.classList.add('hidden', 'opacity-0');
            }, 300);
            
            // Go back to the landing page and reset the form
            showLandingPage();
            form.reset();
        }

        // Handle form submission
        form.addEventListener('submit', function(event) {
            event.preventDefault(); // Prevents the form from submitting in the traditional way
            showConfirmationModal();
        });

    </script>
</body>
</html>
